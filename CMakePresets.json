{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24
    },
    "configurePresets": [
        {
            "name": "debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_FLAGS": "-ggdb -fsanitize=address -fno-omit-frame-pointer -fno-strict-aliasing",
                "CMAKE_CXX_FLAGS": "-ggdb -fsanitize=address -fno-omit-frame-pointer -fno-strict-aliasing",
                "CMAKE_EXE_LINKER_FLAGS": "-ggdb -fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_WARN_DEPRECATED": "OFF"
            }
        },
        {
            "name": "win32 debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_WARN_DEPRECATED": "OFF"
            }
        },
        {
            "name": "ddraw debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_WARN_DEPRECATED": "OFF",
                "ZORRO_ENGINE": "ddraw"
            }
        },
        {
            "name": "win95 debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "mingw-w64.toolchain",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_WARN_DEPRECATED": "OFF",
                "ZORRO_ENGINE": "ddraw",
                "CMAKE_C_FLAGS": "-march=pentium -mtune=pentium -ffast-math -DWIN32_WINNT=0x0400 -DWINVER=0x0400",
                "CMAKE_CXX_FLAGS": "-march=pentium -mtune=pentium -ffast-math -DWIN32_WINNT=0x0400 -DWINVER=0x0400",
                "CMAKE_EXE_LINKER_FLAGS": "-s"
            }
        },
        {
            "name": "emscripten",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_FLAGS": "-ggdb -fsanitize=address -fno-omit-frame-pointer -fno-strict-aliasing",
                "CMAKE_CXX_FLAGS": "-ggdb -fsanitize=address -fno-omit-frame-pointer -fno-strict-aliasing",
                "CMAKE_EXE_LINKER_FLAGS": "-ggdb -fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_WARN_DEPRECATED": "OFF"
            }
        }
    ]
}

